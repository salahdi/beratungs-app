<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tabTitel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dip"
        android:paddingLeft="20dip"
        android:paddingTop="30dip"
        android:text="Wohnungsdaten"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/wohnungList"
            android:layout_width="350dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dip"
            android:dividerHeight="2dip"
            android:listSelector="@drawable/listitem_color_selector_single"
            android:paddingLeft="20dip"
            android:paddingRight="5dip"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarFadeDuration="0"
            android:scrollbarStyle="outsideInset" />

        <LinearLayout
            android:id="@+id/layWohnsituation"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelWohnsituation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohnsituation"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/wohnsituationList"
                android:layout_width="500dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dip"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarFadeDuration="0"
                android:scrollbarStyle="outsideInset" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layWohnform"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelWohnform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohnform"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/wohnformList"
                android:layout_width="500dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dip"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarFadeDuration="0"
                android:scrollbarStyle="outsideInset" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layWohninformation"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelWohninformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohninformation"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/wohninformationStockwerkeText"
                    android:layout_width="350dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Anzahl Stockwerke:"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bMinus"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etNumber"
                    android:layout_width="50dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/bPlus"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/wohninformationFlaecheText"
                    android:layout_width="350dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohnfläche in Quadratmeter:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etWohnflaeche"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="qm"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/wohninformationFlaecheQM"
                    android:layout_width="40dip"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="qm"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layWohnumfeld"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelWohnumfeld"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohnumfeld"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/wohnumfeldList"
                android:layout_width="500dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dip"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarFadeDuration="0"
                android:scrollbarStyle="outsideInset" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layWohnraeume"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelWohnraeume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohnräume"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/wohnraeumeList"
                android:layout_width="500dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dip"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarFadeDuration="0"
                android:scrollbarStyle="outsideInset" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layWohnbarrieren"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="80dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titelWohnbarrieren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:paddingLeft="10dip"
                    android:text="Wohnbarrieren"
                    android:textSize="30sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/wohnbarrierenList"
                android:layout_width="500dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dip"
                android:choiceMode="multipleChoice"
                android:divider="@drawable/divider"
                android:dividerHeight="2dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarFadeDuration="0"
                android:scrollbarStyle="outsideInset" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>